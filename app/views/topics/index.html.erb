<div class="main container">
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>投稿日</th>
            <th>タイトル</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @topics.each do |topic| %>
          <tr>
            <th>
              <%= link_to topic_path(topic) do %>
              <%= attachment_image_tag topic, :topic_image, size: "120x120", class: "img-rounded", fallback: "no_image.jpg" %>
              <% end %>
            </th>
            <th><%= topic.created_at.strftime('%Y/%m/%d') %></th>
            <th>
              <%= link_to topic_path(topic) do %>
              <%= topic.title %>
              <% end %>
            </th>
            <th><%= topic.genre.name %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
