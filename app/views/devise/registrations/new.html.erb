<div class="main container">
  <div class="form edit">
    <div class="row">
      <div class="col-xs-12 center">
        <h2 class="diary">新規登録画面</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- 追加項目 -->
        <div class="form-group row">
          <div class="col-xs-4 col-xs-offset-4">
            <%= f.label :ユーザー名 %><em>(必須)</em><br>
            <%= f.text_field :name, autofocus:true, autocomplete: "name", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
            <%= f.label :性別 %><em>(必須)</em><br>
            <%= f.select :gender, User.genders.keys.to_a, prompt: "選択してください" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
            <%= f.label :生年月日 %><em>(必須)</em><br>
            <!-- use_month_numbers（月の表示を数字で表示） -->
            <%= f.date_select :birthday, start_year: 1930, end_year: Time.current.year, prompt: "--", use_month_numbers: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
            <%= f.label :身長 %><br>
            <%= f.number_field :height, min: 0, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
            <%= f.label :目標体重 %><em>(必須)</em><br>
            <%= f.number_field :goal_weight, min: 0, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
            <%= f.label :公開ステータス %><br>
            <%= f.label :公開ステータス, :公開 %>
            <%= f.radio_button :public_status, "公開", checked: true %>
            <%= f.label :公開ステータス, :非公開 %>
            <%= f.radio_button :public_status, "非公開" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-4 col-xs-offset-4">
            <%= f.label :メールアドレス %><em>(必須)</em><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2 col-xs-offset-5">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-warning" %>
        </div>
        <% end %>
        <div class="back">
          <p>ログインはこちら</p>
            <%= render "devise/shared/links" %>
          <p class="test">テストユーザーはこちら<br>
          ⬇︎</p>
          <%= render "devise/sessions/testuser" %>
        </div>
      </div>
    </div>
  </div>

