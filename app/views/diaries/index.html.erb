<div class="main container">
  <div class="icon">
    <%= link_to new_diary_path do %>
    <i class="fas fa-plus-circle fa-4x"></i>
    <% end %>
  </div>
  <div class="row">
    <% @diaries.each do |diary| %>
    <div class="col-xs-3">
      <div class="diary-index center">
        <%= attachment_image_tag diary.user, :profile_image, size: "100x100", class: "img-circle", fallback: "no_image.jpg" %><br>
        <%= diary.user.name %>
        <p><%= link_to diary.created_on.strftime('%Y年%m月%d日'), diary_path(diary) %>の日記</p>
        <%= render "diaries/tag_list", tag_list: diary.tag_list %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="center">
    <%= paginate @diaries, class: "paginate" %>
  </div>
