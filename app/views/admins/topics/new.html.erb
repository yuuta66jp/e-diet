<h1>新規登録</h1>

<%= form_with model: @topic, url:admins_topics_path, local: true do |f| %>

  <h3>画像</h3>
  <%= f.attachment_field :topic_image %>

  <h3>タイトル</h3>
  <%= f.text_field :title %>


  <h3>本文</h3>
  <%= f.text_area :body %>

  <h3>ジャンル</h3>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>

  <%= f.submit "追加" %>

<% end %>
