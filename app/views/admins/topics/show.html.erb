<div class="form edit">
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-4 col-xs-offset-2">
        <%= attachment_image_tag @topic, :topic_image, size: "200x200", class: "img-rounded", fallback: "no_image1.jpg" %>
      </div>
      <div class="col-xs-4 title">
        <h3><%= @topic.title %></h3>
        <h4>内容</h4>
          <p><%= simple_format(@topic.body) %></p>
      </div>
    </div>
  </div>
  <div class="back center">
    <%= link_to "戻る", :back, class: "btn btn-info btn-sm" %>
  </div>
</div>
