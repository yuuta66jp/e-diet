<h1>編集</h1>

<%= form_with model: @topic, url:admins_topic_path, local: true do |f| %>
<!-- エラーメッセージの部分テンプレート(f.objectで@topicをmodelに渡す) -->
<%= render 'layouts/error_messages', model: f.object %>

  <h3>画像</h3>
  <%= f.attachment_field :topic_image %>

  <h3>タイトル</h3>
  <%= f.text_field :title %>


  <h3>本文</h3>
  <%= f.text_area :body %>

  <h3>ジャンル</h3>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>

  <%= f.submit "追加" %>

<% end %>
