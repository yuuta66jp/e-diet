<h3>ジャンル編集画面</h3>

<%= form_with model: @genre, url: admins_genre_path, local: true do |f| %>
<!-- エラーメッセージの部分テンプレート(f.objectで@genreをmodelに渡す) -->
<%= render 'layouts/error_messages', model: f.object %>
  <span>ジャンル
    <%= f.text_field :name %>
    <label><%=f.radio_button :is_active, "true"%>有効</label>
    <label><%=f.radio_button :is_active, "false"%>無効</label>
    <%= f.submit "変更を保存する" %>
  </span>
<% end %>
