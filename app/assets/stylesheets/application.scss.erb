 @import "bootstrap-sprockets";
 @import "bootstrap";

body {
  background-image: url(<%= asset_path "yasai.jpg" %>);
  background-size:cover;
  background-attachment: fixed;
  background-position: center;
  margin-top: 70px;
  width: 100vw;
  height: 100vh;
  background-color: rgba(255,255,255,0.6);
  background-blend-mode: soft-light;
}

header {
  color: #008000;
}

footer {
  width: 100%;
  height: 60px;
  background-color: rgba(0,0,0,0.6);
  color: white;
  text-align: center;
}

ul.footer-menu li {
  display: inline;
}

.footer-menu {
  padding-left: 0px;
  padding-top: 10px;

}
ul.footer-menu a {
  color: white;
}

.nav > a {
  color: #008000;
}

.nav > li > a {
  color: #008000;
}

.navbar-fixed-top {
  top: 15px;
  right: 20px;
  left: 20px;
  height: 50px;
  border-width: 0px;
  border-radius: 50px 50px;
  background: #ffffff;
}

.navbar-left {
  padding-left: 15px;
  margin: 0;
}

.navbar-right {
  padding-right: 15px;
  margin: 0;
}
#show, #hide {
  display: none;
}

.main {
  background-color: rgba(255,255,255,0.9);
  width: auto;
  min-height: 800px;
}

.admin {
  background-color: rgba(255,255,255,1);
  min-height: 800px;
}

.login {
  background-color: rgba(255,255,255,0.7);
  padding: 30px 30px;
  box-shadow:0 2px 4px 0 rgba(0,0,0,.15);
  border-radius: 10px;
  max-width: 450px;
  margin: auto;
  margin-top: 100px;
  margin-bottom: 130px;
}

.center {
  text-align: center;
}

.user-index {
  padding: 50px 25px;
  width: 190px;
  height: 460px;
  margin: auto;
}

.profile {
  padding: 50px 100px;
}

.edit {
  padding-top: 20px;
  padding-bottom: 50px;
}

.box {
  height: 220px;
  line-height: 220px;
  box-shadow:0 2px 4px 0 rgba(0,0,0,.15);
  border-radius: 10px;
  margin-top: 10px;
  text-align: center;
  background-color: #dcdcdc;
  font-size: 20px;
}

.title {
  text-align: left;
}

.new_meal {
  margin-bottom: 60px;
}

.edit_diary {
  text-align: left;
  padding-top: 50px;
}

.diary {
  margin-bottom: 30px;
}

.diary-index {
  padding: 30px 25px;
  width: 170px;
  height: 270px;
  margin: auto;
}

.icon {
  text-align: end;
  padding-top: 15px;
  padding-right: 30px;
  color: #228b22;
}

.fa-plus-circle:before {
  color: #3cb371;
}

.fa-plus-circle.genre:before {
  color: #ffa500;
}

.green {
  color: green;
}

.silver {
  color: silver;
}

.gold {
  color: goldenrod;
}

.alert {
  background-color: rgba(255,255,255,0.9);
  margin-bottom: 0px;
  border-radius: 0px;
  border: 0px;
}

.marker_yellow {
background: linear-gradient(transparent 60%, #ffff66 60%);
}

.about {
  padding-top: 20px;
  padding-bottom: 50px;
}

.topic {
  margin-bottom: 30px;
}

.topic-title {
  margin-top: 30px;
}

.label-success > a {
  color: white;
}

.congfirm {
  padding-top: 70px;
}

em {
  color: red;
}

.back {
  margin-top: 30px;
}

.test {
  margin-bottom: 0px;
}

.follow {
  background-color: rgba(255,255,255,0.5);
  box-shadow:0 2px 4px 0 rgba(0,0,0,.15);
  border-radius: 10px;
  height: 50px;
  line-height: 50px;
  font-weight: bold;
}

@media screen and (max-width:425px) {

  #cover {
    background: #000;
    opacity: 0.6;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    display: none;
  }

  #menu {
    z-index: 2;
    position: absolute;
    top: 0;
    right: -200px;
    background: #fff;
    padding: 10px;
    margin-right: -20px;
    box-sizing: border-box;
    width: 200px;
    min-height: 100%;
    transition: .4s;
  }

  #show, #hide {
    float: right;
    cursor: pointer;
    display: block;
  }

  #show {
    height: 50px;
    line-height: 50px;
    padding-right: 25px;
  }

  body.menu-open {
    overflow-y: hidden;
  }

  body.menu-open #cover {
    display: block;
  }

  body.menu-open #menu {
    right: 0;
  }
  
  .index {
    width: 50%;
    padding: 0;
  }

  .diary-index {
    height: 230px;
  }

  .user-index {
  height: 380px;

  }

}
